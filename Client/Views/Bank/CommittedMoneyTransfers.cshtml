@model List<Client.Models.MoneyTransfer>
@{
    ViewData["Title"] = "Committed Money Transfers";
}

<h2>Committed Money Transfers</h2>

@if (Model == null || !Model.Any())
{
    <p>No committed money transfers are available.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>From Client ID</th>
                <th>To Client ID</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transfer in Model)
            {
                <tr>
                    <td>@transfer.Id</td>
                    <td>@transfer.FromClientId</td>
                    <td>@transfer.ToClientId</td>
                    <td>@transfer.Amount</td>
                </tr>
            }
        </tbody>
    </table>
}
