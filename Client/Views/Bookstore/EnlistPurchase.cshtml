
@{
    ViewBag.Title = "Enlist Purchase";
}

<h2>Enlist Purchase</h2>

<form asp-action="EnlistPurchase" method="post">
    <div class="form-group">
        <label>Select Book</label>
        <select name="bookId" class="form-control">
            @foreach (var book in ViewBag.Books as List<Client.Models.Book>)
            {
                <option value="@book.Id">@book.Title</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Quantity</label>
        <input type="number" name="quantity" class="form-control" min="1" />
    </div>

    <button type="submit" class="btn btn-primary">Submit Purchase</button>
</form>
