@{
    ViewBag.Title = "Enlist Purchase";
}

<h2>Enlist Purchase</h2>

@if (ViewBag.Books == null || !(ViewBag.Books as List<Client.Models.Book>).Any())
{
    <p>No books are available for purchase.</p>
}
else
{
    <form asp-action="EnlistPurchase" method="post">
        <div class="form-group">
            <label for="bookId">Select Book</label>
            <select id="bookId" name="bookId" class="form-control" required>
                <option value="" disabled selected>Select a book</option>
                @foreach (var book in ViewBag.Books as List<Client.Models.Book>)
                {
                    <option value="@book.Id">@book.Title</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="quantity">Quantity</label>
            <input id="quantity" type="number" name="quantity" class="form-control" min="1" required />
        </div>

        <button type="submit" class="btn btn-primary">Submit Purchase</button>
    </form>
}
